{% include 'base.html.twig' %}
{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="media d-flex">
            <img class="serie-image align-self-start mr-3 px-3" src="{{program.poster}}" alt="{{ program.title }} poster">
            <div class="serie-body media-body px-3">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p>{{ program.summary }}</p>
                <p>Catégorie : {{ program.category.name }}</p>
                <p>Acteurs :</p>
                <ul>
                    {% for actor in program.actors %}
                        <li><a href="{{ path("actor_show", {'slug': actor.slug}) }}">{{ actor.name }}</a></li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
                <div class="d-flex flex-wrap justify-content-between">
                    {% for season in seasons %}
                        <a class="season-item px-2 mb-2" href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Saison {{ season.number}}</a>
                    {% endfor %}
                </div>
                <a href="{{ path('program_index') }}">
                    Retour à la liste des programmes
                </a>
            </div>
        </div>
    </div>
{% endblock %}