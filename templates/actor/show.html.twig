{% extends 'base.html.twig' %}

{% block title %}Fiche de {{ actor.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center">
            <h1>{{ actor.name }}</h1>
        </div>
        <div class="d-flex justify-content-center">
            <ul>
                {% for program in actor.programs %}
                    <li><a href="{{ path("program_show", {'slug': program.slug}) }}">{{ program.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
